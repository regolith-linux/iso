prompt 0

MENU HIDDEN
MENU AUTOBOOT Booting Regolith live disk in # seconds
timeout 50

label live-@FLAVOUR@
	menu label ^Try Regolith
	linux /casper/vmlinuz
	initrd /casper/initrd.lz
	append @APPEND_LIVE@

label live-safe-@FLAVOUR@
	menu label Try Regolith (Safe graphics)
	linux /casper/vmlinuz
	initrd /casper/initrd.lz
	append @APPEND_LIVE@ nomodeset

label install-@FLAVOUR@
	menu label ^Install Regolith
	menu default
	linux /casper/vmlinuz
	initrd /casper/initrd.lz
	append @APPEND_INSTALL@

label install-safe-@FLAVOUR@
	menu label Install Regolith (^Safe graphics)
	linux /casper/vmlinuz
	initrd /casper/initrd.lz
	append @APPEND_INSTALL@ nomodeset

label check
	menu label ^Verify integrity of the boot medium
	linux /casper/vmlinuz
	initrd /casper/initrd.lz
	append @APPEND_LIVE@ verify-checksums
